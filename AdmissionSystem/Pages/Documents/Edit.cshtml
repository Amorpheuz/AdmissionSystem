@page
@model AdmissionSystem.PagesDocuments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Documents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Documents.DocumentsID" />
            <div class="form-group">
                <label asp-for="Documents.DocumentPath" class="control-label"></label>
                <input asp-for="Documents.DocumentPath" class="form-control" />
                <span asp-validation-for="Documents.DocumentPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documents.StudentID" class="control-label"></label>
                <select asp-for="Documents.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                <span asp-validation-for="Documents.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
