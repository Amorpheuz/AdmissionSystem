@page
@model AdmissionSystem.PagesDocuments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documents[0].DocumentPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documents[0].Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Documents) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DocumentsID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DocumentsID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DocumentsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
