        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrioAreaOfResearch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicYear.AcademicYearID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ApplicationListID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ApplicationListID">Details</a> |
